<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="mx.segundamano.doubleseekbar.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/minval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputMinValueHint"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/maxval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputMaxValueHint"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/double_seekbar_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <mx.segundamano.seekbars.DoubleSeekbarView
        android:id="@+id/double_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/minselval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/setMinValSelHint"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/maxvalsel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/setMaxValSelHint"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
